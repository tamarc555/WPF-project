<Page x:Class="PL.managerEnterce"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="managerEnterce">

    <Grid Background="#FFDCF2F0">
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="20" Margin="61,125,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" BorderBrush="Black" TextChanged="NameTextBox_TextChanged"/>
        <PasswordBox x:Name="passwordTextBox" HorizontalAlignment="Left" Height="20" Margin="61,173,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" SelectionTextBrush="Black" BorderBrush="Black"/>
        <Button x:Name="ManagerLogin" Content="המשך" HorizontalAlignment="Left" Height="19" Margin="44,133,0,0" VerticalAlignment="Top" Width="118" Background="#FFC8C9D0" Click="ManagerLogin_Click"/>

        <Button x:Name="exitManagment" Content="צא ממצב מנהל" HorizontalAlignment="Left" Height="19" Margin="63,213,0,0" Grid.Row="1" VerticalAlignment="Top" Width="118" Click="Button_Click_4"/>

    </Grid>
</Page>
