            <Button x:Name="updateButton" HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="44" Background="White" BorderBrush="White" Click="Button_Click" Margin="292,332,0,0">
                <StackPanel x:Name="updateImage" Height="40" Width="40">
                    <StackPanel.Background>
                        <ImageBrush ImageSource="/update.png"/>
                    </StackPanel.Background>
                </StackPanel>
            </Button>
            <Button x:Name="closeButton" HorizontalAlignment="Left" Height="35" Margin="4,5,0,0" VerticalAlignment="Top" Width="35" Background="White" BorderBrush="White" Click="Button_Click_6">
                <StackPanel Height="30" Width="30">
                    <StackPanel.Background>
                        <ImageBrush ImageSource="/x.png"/>
                    </StackPanel.Background>
                </StackPanel>
            </Button>
            <Button x:Name="ChargeButton" HorizontalAlignment="Left" Height="45" Margin="174,334,0,0" VerticalAlignment="Top" Width="44" Background="White" BorderBrush="White" Click="Button_Click_2">
                <StackPanel x:Name="chargeImage" Height="40" Width="40">
                    <StackPanel.Background>
                        <ImageBrush ImageSource="/charge.png"/>
                    </StackPanel.Background>
                </StackPanel>
            </Button>
            <Button x:Name="ParcelButton" HorizontalAlignment="Left" Height="45" Margin="236,334,0,0" VerticalAlignment="Top" Width="44" Background="White" BorderBrush="White" Click="Button_Click_3">
                <StackPanel Height="40" Width="40">
                    <StackPanel.Background>
                        <ImageBrush ImageSource="/drone with parcel.png"/>
                    </StackPanel.Background>
                </StackPanel>
            </Button>
            <Button x:Name="plusButton" HorizontalAlignment="Left" Height="44" Margin="290,315,0,0" VerticalAlignment="Top" Width="47" Background="White" BorderBrush="White" Click="Button_Click_1">
                <StackPanel x:Name="plusImage" Height="40" Width="40">
                    <StackPanel.Background>
                        <ImageBrush ImageSource="/plus.png"/>
                    </StackPanel.Background>
                </StackPanel>
            </Button>
            <TextBox x:Name="timeInChargeBox" HorizontalAlignment="Left" Height="22" Margin="171,384,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="47" TextChanged="timeInChargeBox_TextChanged"/>
            <Label x:Name="timeInChargeText" Content="Enter time in charge:" HorizontalAlignment="Left" Height="28" Margin="45,381,0,0" VerticalAlignment="Top" Width="121"/>
            <Button x:Name="vButton" HorizontalAlignment="Left" Height="20" Margin="224,385,0,0" VerticalAlignment="Top" Width="28" Background="White" BorderBrush="White" Click="vButton_Click">
                <StackPanel x:Name="vImage" Height="20" Width="25">
                    <StackPanel.Background>
                        <ImageBrush ImageSource="/v.png"/>
                    </StackPanel.Background>
                </StackPanel>
            </Button>
            <Button x:Name="automatic" Content="Button" HorizontalAlignment="Left" Height="37" Margin="67,322,0,0" VerticalAlignment="Top" Width="39" Click="automatic_Click"/>
            <Button x:Name="manualButton" Content="Button" HorizontalAlignment="Left" Height="48" Margin="5,289,0,0" VerticalAlignment="Top" Width="34" Click="manualButton_Click"/>

        </Grid>
    </Grid>
</Window>
